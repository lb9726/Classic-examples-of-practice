PRG = txl

SRCDIR = src
OBJDIR = obj

INC = -Iinclude
LIB = -lpthread
  
CC = gcc
CC_FLAG = -Wall -O2

SRC = $(notdir $(wildcard $(SRCDIR)/*.c))
OBJ = $(SRC:%.c=$(OBJDIR)/%.o)

all:$(PRG)

$(PRG):$(OBJ)  
	$(CC) $(INC) -c %< -o $@ $(LIB) 
   
$(OBJDIR)/%.o: $(SRCDIR)/%.c 
	$(CC) $(INC) -c $< -o $@ 

.PRONY:clean
clean:  
	@echo "Clean......"  
	rm -f $(OBJ) $(PRG)  
